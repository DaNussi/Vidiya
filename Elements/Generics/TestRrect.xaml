<UserControl x:Class="Vidiya.Elements.Generics.TestRrect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vidiya.Elements.Generics"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid Background="Magenta">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Column="0" Grid.Row="0" Fill="Black"/>
        <Rectangle Grid.Column="2" Grid.Row="0" Fill="Black"/>
        <Rectangle Grid.Column="1" Grid.Row="1" Fill="Black"/>
        <Rectangle Grid.Column="3" Grid.Row="1" Fill="Black"/>
        <Rectangle Grid.Column="0" Grid.Row="2" Fill="Black"/>
        <Rectangle Grid.Column="2" Grid.Row="2" Fill="Black"/>
        <Rectangle Grid.Column="1" Grid.Row="3" Fill="Black"/>
        <Rectangle Grid.Column="3" Grid.Row="3" Fill="Black"/>
    </Grid>
</UserControl>
