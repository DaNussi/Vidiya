<UserControl x:Class="Vidiya.Elements.ContentQueueItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vidiya.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="250"
             Height="20">
    <Grid Margin="-0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="TypeTextBlock" Margin="0" Grid.Column="0" Loaded="TypeTextBlock_Loaded" Foreground="White" TextAlignment="Center" >♬</TextBlock>
        <TextBlock x:Name="UriTextBlock" Margin="5,0" Grid.Column="1" Loaded="UriTextBlock_Loaded" Foreground="White">None</TextBlock>
    </Grid>
</UserControl>
