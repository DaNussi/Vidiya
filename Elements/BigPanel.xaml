<UserControl x:Class="Vidiya.Elements.BigPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vidiya.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="1080" 
             d:DesignWidth="1470"
             Background="#014D71">
    <Grid>
        <Grid Margin="40" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="330"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="48.6"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Viewbox Stretch="Uniform"
                     Grid.Column="0" Grid.ColumnSpan="3"
                     Grid.Row="0" Grid.RowSpan="3">
                <MediaElement Name="Media" Loaded="Media_Loaded"/>
            </Viewbox>
            <local:SecondaryMediaControl Grid.Column="1" Grid.Row="1"/>
        </Grid>

    </Grid>
</UserControl>
