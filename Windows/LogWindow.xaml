<Window x:Class="Vidiya.Windows.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vidiya.Windows"
        mc:Ignorable="d"
        Title="Vidiya Logs" 
        Height="1080" 
        Width="1470"
        Background="#014D71">
    <Grid>
        <Grid Margin="40" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="330"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="48.6"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <ScrollViewer Name="LogScrollViewer"
                       Grid.Column="0" Grid.ColumnSpan="3"
                       Grid.Row="0" Grid.RowSpan="3">
                <TextBlock x:Name="LogTextBlock" Loaded="LogTextBlock_Loaded"
                       FontSize="18" Foreground="White" FontFamily="Monospac821 BT">Demo Text</TextBlock>
            </ScrollViewer>
        </Grid>

    </Grid>
</Window>
