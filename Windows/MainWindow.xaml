<Window xmlns:Elements="clr-namespace:Vidiya.Elements"  x:Class="Vidiya.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vidiya.Windows"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="1080" Width="1920"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480px"/>
            <ColumnDefinition Width="3px"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        
        <Rectangle Grid.Column="1" Fill="#FFFFFF"/>
        <Elements:SidePanel Grid.Column="0"/>
        <Elements:BigPanel Grid.Column="2"/>
    </Grid>
</Window>
